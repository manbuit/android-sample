<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manbuit.android.layout" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_LinearLayout"
            android:label="LinearLayout" >

            <!--
            android:theme="@style/AppTheme.NoActionBar"  没有顶部的ActionBar
            android:theme="@style/AppTheme"
            -->
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.manbuit.android.intent.action.xxxxactivity2" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity_DyncLayout" >
        </activity>
    </application>

</manifest>
