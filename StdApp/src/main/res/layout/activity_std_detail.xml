<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#EEE"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        tools:context="com.manbuit.android.fragment.StdDetailActivity">

        <!--标准号-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:textStyle = "bold"
            android:background="#FFF"
            android:id="@+id/detail_tv_code" />

        <!--标准名称-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_name" />

        <!--标准类别-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_category" />

        <!--发布日期-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_fbrq" />

        <!--实施日期-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_ssrq" />

        <!--废止日期-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_fzrq" />

        <!--电子标准-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="#FFF"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp"
            android:text="电子标准"/>
        <com.manbuit.android.fragment.view.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_tv_files"
            android:padding="4dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:dividerHeight="0dp"
            android:background="#FFF"
            android:divider="@android:color/transparent"
            />

        <!--旧版标准-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="#FFF"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp"
            android:text="旧版标准"/>
        <com.manbuit.android.fragment.view.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_tv_old_vers"
            android:padding="4dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:dividerHeight="0dp"
            android:background="#FFF"
            android:divider="@android:color/transparent"
            />

        <!--新版标准-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="#FFF"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp"
            android:text="新版标准"/>
        <com.manbuit.android.fragment.view.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_tv_new_vers"
            android:padding="4dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:dividerHeight="0dp"
            android:background="#FFF"
            android:divider="@android:color/transparent"
            />

        <!--标准摘要-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="#FFF"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp"
            android:text="标准摘要"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_summary" />
        <!--
            android:visibility="gone"-->
    </LinearLayout>
</ScrollView>

