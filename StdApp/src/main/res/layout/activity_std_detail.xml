<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#EEE"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        tools:context="com.manbuit.android.fragment.StdDetailActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:textStyle = "bold"
            android:background="#FFF"
            android:id="@+id/detail_tv_code" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_category" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_fbrq" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_ssrq" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_fzrq" />

        <com.manbuit.android.fragment.view.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_tv_files"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:dividerHeight="0dp"
            android:layout_marginTop="6dp"
            android:background="#FFF"
            android:divider="@android:color/transparent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text=""
            android:background="#FFF"
            android:id="@+id/detail_tv_summary" />
        <!--
            android:visibility="gone"-->
    </LinearLayout>
</ScrollView>

