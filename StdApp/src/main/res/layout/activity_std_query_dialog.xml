<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context="com.manbuit.android.fragment.StdQueryDialogActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:text="标准状态"
                android:textColor="#333"
                android:textStyle="bold" />
            <!--android:background="#11336699"-->

            <RadioGroup
                android:id="@+id/rg_std_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >-->
                <RadioButton
                    android:id="@+id/rb_全部状态"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="全部状态"
                    android:textColor="#333" />

                <RadioButton
                    android:id="@+id/rb_在用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在用"
                    android:textColor="#333" />

                <RadioButton
                    android:id="@+id/rb_作废"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作废"
                    android:textColor="#333" />
                <!--</LinearLayout>-->
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:text="标准类别"
                android:textColor="#333"
                android:textStyle="bold" />
            <!--android:background="#11336699"-->

            <RadioGroup
                android:id="@+id/rg_std_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_全部类别"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="全部类别"
                    android:textColor="#333" />

                <RadioButton
                    android:id="@+id/rb_国家标准"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="国家标准"
                    android:textColor="#333" />

                <RadioButton
                    android:id="@+id/rb_SN标准"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SN标准"
                    android:textColor="#333" />

                <RadioButton
                    android:id="@+id/rb_行业标准"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行业标准"
                    android:textColor="#333" />

                <RadioButton
                    android:id="@+id/rb_ISO标准"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISO标准"
                    android:textColor="#333" />

                <RadioButton
                    android:id="@+id/rb_ASTM标准"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASTM标准"
                    android:textColor="#333" />

                <RadioButton
                    android:id="@+id/rb_JIS标准"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JIS标准"
                    android:textColor="#333" />

                <RadioButton
                    android:id="@+id/rb_其他标准"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他标准"
                    android:textColor="#333" />

            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="2pt"
        android:layout_marginLeft="0pt"
        android:layout_marginRight="0pt"
        android:layout_marginTop="2pt"
        android:background="#44666666" />

    <EditText
        android:id="@+id/et_std_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="请输入标准号或标准名称"
        android:singleLine="true"
        android:imeOptions="actionSearch"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="查询" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="清空" />

        <Button
            android:id="@+id/button_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="退出" />

    </LinearLayout>

</LinearLayout>