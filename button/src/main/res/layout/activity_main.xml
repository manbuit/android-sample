<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:text="这是一个Button组件的演示\r\n使用不同的方式响应OnClick!"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Button：使用onClick属性"
        android:layout_marginTop="10dp"
        android:id="@+id/button1"
        android:onClick="btn1_OnClick"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Button：使用匿名内部类"
        android:layout_marginTop="10dp"
        android:id="@+id/button2"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Button：使用自定义监听类"
        android:layout_marginTop="10dp"
        android:id="@+id/button3"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Button：Activity实现View.OnClickListener"
        android:layout_marginTop="10dp"
        android:id="@+id/button4"
        />

</LinearLayout>
